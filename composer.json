{
  "name": "yivoff/commonmark-bundle",
  "type": "symfony-bundle",
  "description": "Symfony bundle integrating League CommonMark for Symfony 5.3+ applications",
  "license": "MIT",
  "authors": [
    {
      "name": "Yivi",
      "email": "ivan@yivoff.com"
    }
  ],
  "require": {
    "php": ">=8.0",
    "league/commonmark": "^2.0.2",
    "symfony/config": "^5.1",
    "symfony/dependency-injection": "^5.1",
    "symfony/framework-bundle": "^5.1",
    "symfony/http-kernel": "^5.1"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.4",
    "matthiasnoback/symfony-config-test": "^4.2",
    "nyholm/symfony-bundle-test": "dev-master",
    "roave/security-advisories": "dev-master",
    "symfony/filesystem": "^5.1",
    "symfony/phpunit-bridge": "^5.1",
    "symfony/twig-bundle": "^5.1",
    "symfony/yaml": "^5.1"
  },
  "autoload": {
    "psr-4": {
      "Yivoff\\CommonmarkBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Yivoff\\CommonmarkBundle\\": "tests/"
    }
  },
  "minimum-stability": "stable"
}
